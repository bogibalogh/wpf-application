<Window x:Class="WPF_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Server"
        mc:Ignorable="d"
        Title="WPF Szerver" Height="600" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
     
        </Grid.RowDefinitions>

        <TextBox Margin="10"
                 Grid.Row="0"  x:Name="LogTextBox"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 VerticalContentAlignment="Top"
                 TextWrapping="Wrap"/>
     

        <Button Grid.Row="1" Margin="10"
                x:Name="StartServerButton"
                Content="Szerver Indítása"
                Click="StartServerButton_Click"/>

        

    </Grid>
</Window>