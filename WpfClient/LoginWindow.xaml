<Window x:Class="WPF_Client.LoginWindow"  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Client"  mc:Ignorable="d"
        Title="Bejelentkezés" Height="450" Width="380"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown"  >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border CornerRadius="15" Grid.RowSpan="2">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#7be9f6"/>
                    <GradientStop Color="#f083da"
                                  Offset="0.8"
                                  />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <StackPanel VerticalAlignment="Center">
          
            <TextBlock Text="Login"
                       Foreground="White"
                       FontFamily="Helvetica"
                       FontSize="24"
                       FontWeight="Light"
                       HorizontalAlignment="Center"
                       />
        </StackPanel>

        <StackPanel Grid.Row="1">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                <TextBox x:Name="usernameTextBox"
                         FontFamily="Helvetica"
                         FontWeight="Light"
                         FontSize="22"
                         Background="Transparent"
                         BorderThickness="0"
                         Text="Username"  Foreground="White"
                         Opacity="0.8"  CaretBrush="White" Width="230"
                         Height="25"
                         VerticalContentAlignment="Center"/>
                
            </StackPanel>

            <Border Width="260" Height="2" Background="White"
                    Opacity="0.5"
                    Margin="0,5,0,15"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <PasswordBox x:Name="passwordBox"
                             FontFamily="Helvetica"
                             FontWeight="Light"
                             FontSize="22"
                             Background="Transparent"
                             BorderThickness="0"
                             Password="Password"  Foreground="White"
                             Opacity="0.8"  CaretBrush="White" Width="230"
                             Height="25"
                              VerticalContentAlignment="Center"/>
             
            </StackPanel>

            <Border Width="260" Height="2" Background="White"
                    Opacity="0.5"
                    Margin="0,5,0,30"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0 10">
                <Button x:Name="LoginButton"
                        Content="LOGIN"
                        Click="LoginButton_Click"  Width="120" Height="45" Margin="30 0"/>
                
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>